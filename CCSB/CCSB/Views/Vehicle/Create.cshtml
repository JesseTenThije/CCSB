@model CCSB.Models.Crv
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> signinManager

@{
    ViewData["Title"] = "Voeg een voertuig toe";
}


@if (signinManager.IsSignedIn(User) && User.IsInRole("Beheerder"))
{
    <h1>Voeg een voertuig toe</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CrvName" class="control-label"></label>
                    <input asp-for="CrvName" class="form-control" />
                    <span asp-validation-for="CrvName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CrvType" class="control-label"></label>
                    <input asp-for="CrvType" class="form-control" />
                    <span asp-validation-for="CrvType" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CrvLength" class="control-label"></label>
                    <input asp-for="CrvLength" class="form-control" />
                    <span asp-validation-for="CrvLength" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CrvBuildYear" class="control-label"></label>
                    <input asp-for="CrvBuildYear" class="form-control" />
                    <span asp-validation-for="CrvBuildYear" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CrvSleepingPlace" class="control-label"></label>
                    <input asp-for="CrvSleepingPlace" class="form-control" />
                    <span asp-validation-for="CrvSleepingPlace" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CrvPks" class="control-label"></label>
                    <input asp-for="CrvPks" class="form-control" />
                    <span asp-validation-for="CrvPks" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CrvKms" class="control-label"></label>
                    <input asp-for="CrvKms" class="form-control" />
                    <span asp-validation-for="CrvKms" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CrvElectricity" class="control-label"></label>
                    <select asp-for="CrvElectricity"
                            asp-items="@CCSB.Utility.Helper.GetYesNoForDropDown()"
                            class="form-control">
                        <option selected>-- Selecteer een keuze</option>
                    </select>
                    <span asp-validation-for="CrvElectricity" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CrvDirtWater" class="control-label"></label>
                    <select asp-for="CrvDirtWater"
                            asp-items="@CCSB.Utility.Helper.GetYesNoForDropDown()"
                            class="form-control">
                        <option selected>-- Selecteer een keuze</option>
                    </select>
                    <span asp-validation-for="CrvDirtWater" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CrvPullingHook" class="control-label"></label>
                    <select asp-for="CrvPullingHook"
                            asp-items="@CCSB.Utility.Helper.GetYesNoForDropDown()"
                            class="form-control">
                        <option selected>-- Selecteer een keuze</option>
                    </select>
                    <span asp-validation-for="CrvPullingHook" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CrvArico" class="control-label"></label>
                    <select asp-for="CrvArico"
                            asp-items="@CCSB.Utility.Helper.GetYesNoForDropDown()"
                            class="form-control">
                        <option selected>-- Selecteer een keuze</option>
                    </select>
                    <span asp-validation-for="CrvArico" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CrvBikes" class="control-label"></label>
                    <select asp-for="CrvBikes"
                            asp-items="@CCSB.Utility.Helper.GetYesNoForDropDown()"
                            class="form-control">
                        <option selected>-- Selecteer een keuze</option>
                    </select>
                    <span asp-validation-for="CrvBikes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CrvPlate" class="control-label"></label>
                    <input asp-for="CrvPlate" class="form-control" />
                    <span asp-validation-for="CrvPlate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ApplicationUserId" class="control-label"></label>
                    <select asp-for="ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Terug naar lijst</a>
    </div>
}

else
{
    <ul class="nav navbar-nav">
    </ul>
}
